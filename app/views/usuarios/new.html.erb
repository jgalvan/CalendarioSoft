<h2>Sign up</h2>

<%= form_for(@usuario) do |f| %>
  <div class="field">
    <%= f.label :nombre %><br/>
    <%= f.text_field :nombre, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :apellidos %><br/>
    <%= f.text_field :apellidos %>
  </div>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :contrasena, "ContraseÃ±a" %><br/>
    <%= f.password_field :contrasena, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>