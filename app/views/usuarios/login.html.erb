<h2>Log in</h2>

<%= form_tag iniciar_sesion_path, method: :post %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= email_field_tag :email, nil, autofocus: true %>
  </div>

  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password, nil, autocomplete: "off" %>
  </div>


  <div class="actions">
    <%= submit_tag "Log in" %>
  </div>